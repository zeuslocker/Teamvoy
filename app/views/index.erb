<h1 class='text-center'>Create a message</h1>
<form action="/" method="post">
  <div class="form-group">
    <label for="body">Message body</label>
    <textarea name="message[body]" cols="60" rows="10" class="form-control" resize="vertival" required autofocus></textarea>
  </div>
  <div class="form-group">
    <label for="body">Destroing method</label><br>
    <select name="message[destroy_type]">
      <option value="0">Number of hours</option>
      <option value="1">Number of visits</option>
    </select>
  </div>
  <div class="form-group">
    <label for="body">Type this number</label><br>
    <input type="number" name="num" min="1" required>
  </div>
  <input type="submit" value='Create', class="btn btn-primary">
</form>
